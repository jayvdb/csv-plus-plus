commission_charge := 0.65 # my broker charges $0.65 a trade

# use INDIRECT() to take a cell and number and get a reference
fees := MULTIPLY($$commission_charge, INDIRECT(CONCAT("D", $$rownum)))

profit := MINUS(MULTIPLY(INDIRECT(CONCAT("B", $$rownum)), INDIRECT(CONCAT("C", $$rownum))), $$fees)
